%h1 Let's find a home!
%p Fill in the form below. Required fields are marked.

= form_tag(search_dashboard_index_path) do
  %p
    = label_tag :search_area, "City/State or ZIP Code"
    = text_field_tag "search[area]"
  %p
    = label_tag :search_price_minimum, "Price Range"
    = text_field_tag "search[price][min]"
    = text_field_tag "search[price][max]"
  %p
    = label_tag :search_bed_minimum, "Number of Bedrooms"
    = text_field_tag "search[bed][min]"
    = text_field_tag "search[bed][max]"
  %p
    = label_tag :search_bath_minimum, "Number of Bathrooms"
    = text_field_tag "search[bath][min]"
    = text_field_tag "search[bath][max]"

  = field_set_tag "The Most Important Questions" do
    %p
      = label_tag :search_are_cats_allowed, "Are Cats Allowed?"
      = check_box_tag "search[are_cats_allowed]"
    %p
      = label_tag :search_are_dogs_allowed, "Are Dogs Allowed?"
      = check_box_tag "search[are_dogs_allowed]"

  = submit_tag "Search"